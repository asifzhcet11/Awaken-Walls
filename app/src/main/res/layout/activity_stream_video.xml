<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cecece">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backArrow"
        android:background="@drawable/backarrow"
        android:layout_margin="20dp"
        android:onClick="goToMainActivity"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/launch"
        android:background="@drawable/cantlaunch"
        android:layout_centerHorizontal="true"
        android:layout_margin="80dp"
        android:onClick="launch"/>

    <custom_font.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/launch"
        android:layout_centerHorizontal="true"
        android:text="You are offline \n Please go online to watch"
        android:textSize="15sp"
        android:gravity="center"
        android:id = "@+id/infoText"/>

    <custom_font.MyTextView
        android:id="@+id/getImagesButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Go Online"
        android:textStyle="bold"
        android:background="@drawable/round"
        android:textColor="#CBD1DC"
        android:gravity="center"
        android:padding="14dp"
        android:onClick="goOnline"
        android:layout_below="@+id/infoText"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        />

    <custom_font.MyTextView
        android:id="@+id/showImagesButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Go Offline"
        android:textStyle="bold"
        android:background="@drawable/round"
        android:textColor="#CBD1DC"
        android:gravity="center"
        android:padding="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/infoText"
        android:layout_alignParentEnd="true"
        android:onClick="goOffline"
        />



</RelativeLayout>